<div class="list-group" style="color: gray;">
    {% for article in pager %}
        <a
            class="list-group-item list-group-item-action"
            href={{ path('article_show', {'id' : article.id}) }}
        >
            {{ article.titre }}
        </a>
    {% else %}
        <div class="list-group-item">Aucun résultat trouvé !</div>
    {% endfor %}
</div>