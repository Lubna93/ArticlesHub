{% extends 'base.html.twig' %}

{% block title %}Contact Us{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/contact.js') }}"></script>
{% endblock %}

{% block body %}
    
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body mx-3">
                    <h1 class="mb-4 text-center h2 m-4">Contact Us</h1>
                    {{ form_start(contact_form) }}

                        {{ form_row(contact_form.name) }}
                        {{ form_row(contact_form.email) }}
                        {{ form_row(contact_form.message) }}

                        <div class="text-center my-4">
                            <button class="btn btn-dark btn-block px-4">Send</button>
                        </div>
                    {{ form_end(contact_form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
